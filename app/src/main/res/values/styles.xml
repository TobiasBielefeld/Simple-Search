<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:windowBackground">@color/nearlyWhite</item>
        <item name="colorHint">@color/normalGrey</item>
        <item name="colorText">@color/black</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat">
        <item name="android:windowBackground">@color/grey</item>
        <item name="android:colorBackground">@color/lightGrey</item>
        <item name="colorPrimary">@color/darkColorPrimary</item>
        <item name="colorPrimaryDark">@color/darkColorPrimaryDark</item>
        <item name="colorAccent">@color/darkColorAccent</item>
        <item name="colorHint">@color/normalGrey</item>
        <item name="colorText">@color/white</item>
    </style>

    <style name="AppTheme.Black" parent="Theme.AppCompat">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:colorBackground">@color/grey</item>
        <item name="colorPrimary">@color/darkColorPrimary</item>
        <item name="colorPrimaryDark">@color/darkColorPrimaryDark</item>
        <item name="colorAccent">@color/darkColorAccent</item>
        <item name="colorHint">@color/normalGrey</item>
        <item name="colorText">@color/white</item>
    </style>

</resources>
